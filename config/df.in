# DF options

menu "Dwarf Fortress"

config DF
	bool
	default y

choice
    bool
    prompt "Dwarf Fortress version"
	default DF_V_0_43_03 if CONFIGURE_has_sdl32
	default DF_V_0_43_05

config DF_V_0_43_05
    bool
    prompt "0.43.05"

config DF_V_0_43_03
    bool
    prompt "0.43.03"
	depends on CONFIGURE_has_sdl32
	
config DF_V_0_40_24
    bool
    prompt "0.40.24"
	depends on CONFIGURE_has_sdl32
	
endchoice

config DF_CUSTOM
    bool
    prompt "Custom DF"
    depends on EXPERIMENTAL
    help
      The choosen DF version shall be not downloaded. Instead use
      a custom location.

if DF_CUSTOM

config DF_CUSTOM_LOCATION
    string
    prompt "Full path to custom DF version"
    default ""
    help
      Enter the path to the directory (or tarball) of your DF version,
      or leave blank to use default CT_CUSTOM_LOCATION_ROOT_DIR/df.

endif #DF_CUSTOM

config DF_VERSION
	string
    default "43_05_linux" if DF_V_0_43_05
    default "43_03_linux" if DF_V_0_43_03
    default "40_24_linux" if DF_V_0_40_24

endmenu
