# Dwarf-Therapist options

menu "Dwarf-Therapist"

config THERAPIST
	bool
	prompt "Build Dwarf-Therapist"
	default n if DF_V_0_43_05
	default y
	help
	  Select this to build Dwarf-Therapist.

config THERAPIST_VERSION
	string
	prompt "Github revision of Dwarf-Therapist"
	default "v37.0.0"
	depends on THERAPIST
	help
	  Dwarf-Therapist revision from https://github.com/splintermind/Dwarf-Therapist.

endmenu
